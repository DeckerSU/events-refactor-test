    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "CodeLLDB: Launch",
            "program": "${workspaceFolder}/events-tests",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "[Mac] C/C++: clang build events-tests.cpp"
        },
        {
            "name": "LLDB: Launch",
            "type": "lldb", // important
            "request": "launch",
            "program": "${workspaceFolder}/events-tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "[Mac] C/C++: clang build events-tests.cpp",
            // "miDebuggerPath": "/Users/decker/.vscode/extensions/ms-vscode.cpptools-1.11.5-darwin-arm64/debugAdapters/lldb-mi/bin/lldb-mi"
        },
        {
            "name": "g++ - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable auto-format for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}